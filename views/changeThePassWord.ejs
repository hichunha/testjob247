    <%- include('layouts/common_library.ejs'); %>
    <link rel="stylesheet" href="/css/changeThePassWord.css?v=<%= data.version %>">
</head>
<body>
    <!-- Main Content -->
    <div class="main-content">
    <main>

        <!-- Sidebar -->
        <div class="sidebar">
            <div class="logo">
                <!-- <h2>Job 247</h2> -->
                <img src="/images/changeThePassWord/Frame 1321317478.png" alt="Company Logo">
            </div>

            <div class="sidebar-user-info">
                <div>
                    <img src="/images/changeThePassWord/Ellipse 1.svg" alt="User Profile">
                    <h3>Lê Trung Lưu</h3>
                    <div style="display: flex; align-items: center;" class="search-allow">Allow employers to search <a href=""><img src="/images/changeThePassWord/Group 1000007338.png" alt=""></div></a>
                </div>
            </div>

            <div class="others">
                <div>
                    <a href=""><div class="sidebar-items"><img style="padding-left: 20px;" src="/images/changeThePassWord/pc.png" alt=""> Account management</div></a>
                </div>

                <div>
                    <a href=""><div class="sidebar-items"><img style="padding-left: 20px;" src="/images/changeThePassWord/profile.png" alt=""> My Profile <img class="sidebar-vector" src="/images/changeThePassWord/Vector.png" alt=""></div></a> 
                    <a class="sidebar-sub-items" href="">Online Profile</a>
                    <a class="sidebar-sub-items" href="">My CV</a>
                </div>

                <div>
                    <a href=""><div class="sidebar-items"><img style="padding-left: 20px;" src="/images/changeThePassWord/my-jobs.png" alt="">My Jobs <img class="sidebar-vector" src="/images/changeThePassWord/Vector.png" alt=""></div></a>          
                    <a class="sidebar-sub-items" href="">Aplied Jobs</a>
                    <a class="sidebar-sub-items" href="">Recomended Jobs</a> 
                </div>

                <div>
                    <a href=""><div class="sidebar-items"><img style="padding-left: 20px;" src="/images/changeThePassWord/chat365.png" alt="">Chat365</div></a>
                </div>

                <div>
                    <a href=""><div class="sidebar-items"><img style="padding-left: 20px;" src="/images/changeThePassWord/setting.png" alt="">Account settings <img class="sidebar-vector" src="/images/changeThePassWord/Vector.png" alt=""></div></a>
                    <div>
                        <a class="sidebar-sub-items sidebar-hover" href=""><span>Change the passwords</span></a>
                    </div>
                </div>

                <div class="dang-xuat">
                    <a style="color: #285A9B;" class="logout-btn" href=""><img src="/images/changeThePassWord/dang-xuat.png" alt=""> Đăng xuất</a>
                </div>
            </div>

        </div>

        <div class="sub-main">
            <!-- User info -->
            <div class="user-info">
                <div class="user-info-item avatar">
                    <img src="/images/changeThePassWord/Ellipse 2.png" alt="">
                </div>
                <div class="user-info-item user-info-item1">
                    <p>Support staff: <a href="">Mrs.Nguyễn Hồng</a></p>
                </div>
                <div class="user-info-item">
                    <p>Phone number: <a href="">0972319116</a></p>
                </div>
                <div class="user-info-item">
                    <p>Email: <a href="">nguyenhongg2609@gmail.com</a></p>
                </div>
            </div>
        
            <!-- Doi MK -->
            <div class="change-pw">
                <h2 class="title">Change the passwords</h2>

                <div class="form-container">
                    <form>
                        <div class="form-group">
                            <label for="current-password">Current password <span style="color: red;">*</span></label>
                            <input type="password" id="current-password" name="current-password" placeholder="Enter current password">
                            <img class="toggle-password" src="/images/changeThePassWord/eyes.png" alt="">
                        </div>
                
                        <div class="form-group">
                            <label for="new-password">New password <span style="color: red;">*</span></label>
                            <input type="password" id="new-password" name="new-password" placeholder="Enter new password">
                            <img class="toggle-password" src="/images/changeThePassWord/eyes.png" alt="">
                        </div>
                
                        <div class="form-group">
                            <label for="confirm-password">Confirm new password <span style="color: red;">*</span></label>
                            <input type="password" id="confirm-password" name="confirm-password" placeholder="Enter confirm new password">
                            <img class="toggle-password" src="/images/changeThePassWord/eyes.png" alt="">
                        </div>
                
                        <div class="btn-group">
                            <button type="submit" class="btn btn-primary">Change</button>
                            <button type="button" class="btn btn-cancel">Cancel</button>
                        </div>
                    </form>
                </div>
            <!--  -->
    </main>

    <script>
        document.querySelectorAll('.toggle-password').forEach(item => {
            item.addEventListener('click', function () {
                const input = this.previousElementSibling;
                if (input.type === 'password') {
                    input.type = 'text';
                } else {
                    input.type = 'password';
                }
            });
        });
    </script>
</body>
</html>